<body>
    <div class="container">
        <hr>
        <div class="card text-left">
            <div class="card-header">
                <h4>Edição de categoria</h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/categories/update">
                    <input type="text" name="title" placeholder="Redefina o titulo da categoria" class="form-control" value="<%= category.title %>"><br>
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>

