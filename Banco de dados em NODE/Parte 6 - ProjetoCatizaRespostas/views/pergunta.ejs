<%- include ('./partials/header.ejs')%>
<body>
    <%- include ('./partials/navbar.ejs')%>
    <!-- Container centraliza o conteudo no meio da visualização do navegador. Logo tudo que eu coloco dentro do conteiner fica centralizado
    e o que eu coloco fora fica colado na borda-->
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/pergunta/<%= pergunta.id %>/resposta" >
            <!-- form-control: deixa o formulario bonito com o bootstrap -->
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control"  name="corpo" cols="30" rows="5"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-success">Responder</button>
        </form>
        <br>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p class="card-text">
                        <%= resposta.corpo %>
                    </p>
                <br>
                </div>
            </div>
        <%}) %>
    </div>
</body>
<%- include ('./partials/footer.ejs')%>

